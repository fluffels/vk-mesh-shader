#version 450
 
#extension GL_NV_mesh_shader : require
 
layout(local_size_x=1) in;
layout(triangles, max_vertices=3, max_primitives=1) out;

struct Vertex {
  vec3 position;
};

layout(binding=1) readonly buffer Vertices {
  Vertex vertices[];
};
 
// Custom vertex output block
layout (location=0) out PerVertexData
{
  vec4 color;
} v_out[];  // [max_vertices]

#include "uniforms.glsl"
#include "quaternion.glsl"
 
const vec3 colors[3] = {vec3(1.0,0.0,0.0), vec3(0.0,1.0,0.0), vec3(0.0,0.0,1.0)};
 
void main()
{
  const float d = .1f;
  const uint i = gl_WorkGroupID.x;
  const uint y = i / 20;
  float yb = 0;
  float yt = yb + d;

  vec3 p = vertices[i].position;
  const float x = p.x;
  float xl = x;
  float xr = xl + d;
  float xc = (xl + xr) / 2;

  vec4 p0 = vec4(xc, -1, p.z, 1);
  vec4 p1 = vec4(xr,  0, p.z, 1);
  vec4 p2 = vec4(xl,  0, p.z, 1);

  p0 -= uniforms.eye;
  p1 -= uniforms.eye;
  p2 -= uniforms.eye;

  p0 = rotate_vertex_position(uniforms.rotation, p0);
  p1 = rotate_vertex_position(uniforms.rotation, p1);
  p2 = rotate_vertex_position(uniforms.rotation, p2);

  // Vertices position
  gl_MeshVerticesNV[0].gl_Position = uniforms.proj * p0; 
  gl_MeshVerticesNV[1].gl_Position = uniforms.proj * p1; 
  gl_MeshVerticesNV[2].gl_Position = uniforms.proj * p2; 
 
  // Vertices color
  v_out[0].color = vec4(colors[0], 1.0);
  v_out[1].color = vec4(colors[1], 1.0);
  v_out[2].color = vec4(colors[2], 1.0);
 
  // Triangle indices
  gl_PrimitiveIndicesNV[0] = 0;
  gl_PrimitiveIndicesNV[1] = 1;
  gl_PrimitiveIndicesNV[2] = 2;
 
  // Number of triangles  
  gl_PrimitiveCountNV = 1;
}
